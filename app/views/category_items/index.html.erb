<p id="notice"><%= notice %></p>
<%= turbo_frame_tag 'category-items-list' do %>
  <h1>Lessons</h1>

  <table>
    <thead>
      <tr>
        <th>Category</th>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @category_items.each do |ci| %>
        <tr>
          <td><%= ci.category_id %></td>
          <td><%= ci.name %></td>
          <td><%= ci.start_date %></td>
          <td><%= ci.end_date %></td>
          <td><%= ci.completed %></td>
          <td><%#= link_to 'Show', [@course, lesson], target: '_top' %></td>
          <td><%#= link_to 'Edit', edit_course_lesson_path(@course, lesson) %></td>
          <td><%#= link_to 'Destroy', [@course, lesson], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

